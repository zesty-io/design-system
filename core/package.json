{
  "name": "@zesty-io/core",
  "description": "This is a collection of React core UI components for the Zesty.io platform.",
  "version": "1.0.0-alpha.5",
  "author": "Zesty.io <developers@zesty.io>",
  "license": "UNLICENSED",
  "main": "dist/",
  "browser": "dist/umd.bundle.js",
  "scripts": {
    "test": "npx jest ./src/**/*test.js --config config.jest.js",
    "build": "npm run build:es2015 && npm run build:bundle && npx gulp --gulpfile config.gulp.js && cp package.json dist/package.json",
    "build:es2015": "cross-env NODE_ENV=production npx babel ./src --out-dir ./dist --ignore *.test.js",
    "build:bundle": "cross-env NODE_ENV=production npx rollup -c config.rollup.js",
    "clean": "npx rimraf dist",
    "release": "npm run clean && npm run build && cd dist && npm publish",
    "release:alpha": "npm run clean && npm run build && cd dist && npm publish --tag alpha",
    "start": "npm i && npm run build && cd dist/ && npm link"
  },
  "dependencies": {
    "codemirror": "^5.51.0",
    "js-beautify": "^1.10.3",
    "tinymce": "^5.1.5"
  },
  "peerDependencies": {
    "@aeaton/react-prosemirror": "^0.21.1",
    "@aeaton/react-prosemirror-config-default": "^0.11.0",
    "@fortawesome/fontawesome-svg-core": "1.2.26",
    "@fortawesome/free-solid-svg-icons": "5.12.0",
    "@fortawesome/react-fontawesome": "0.1.8",
    "@tinymce/tinymce-react": "^3.3.2",
    "classnames": "^2.2.6",
    "codemirror": "^5.49.2",
    "flatpickr": "^4.5.2",
    "lodash.debounce": "^4.0.8",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^4.3.1",
    "react-codemirror2": "^5.1.0",
    "react-flatpickr": "^3.6.4",
    "showdown": "^1.9.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-function-sent": "^7.8.3",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/plugin-proposal-throw-expressions": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/runtime": "^7.8.3",
    "babel-jest": "25.1.0",
    "classnames": "2.2.6",
    "cross-env": "7.0.0",
    "gulp": "4.0.2",
    "gulp-concat-css": "3.1.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.1.0",
    "less": "3.10.3",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-test-renderer": "16.10.2",
    "rollup": "1.30.1",
    "rollup-plugin-analyzer": "3.2.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy-glob": "0.3.1",
