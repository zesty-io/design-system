{
  "name": "@zesty-io/core",
  "version": "0.0.34",
  "description": "This is a collection of React core UI components for the Zesty.io platform.",
  "author": "Zesty.io <developers@zesty.io>",
  "license": "UNLICENSED",
  "main": "dist/",
  "browser": "dist/umd.bundle.js",
  "scripts": {
    "test": "npx jest ./src/**/*test.js --config config.jest.js",
    "precommit": "pretty-quick --staged",
    "build": "npm run clean && npm run build:es2015 && npm run build:bundle && cp package.json dist/package.json",
    "build:es2015": "cross-env NODE_ENV=production npx babel ./src --out-dir ./dist --ignore *.test.js",
    "build:bundle": "cross-env NODE_ENV=production npx rollup -c config.rollup.js",
    "clean": "npx rimraf dist",
    "release": "npm run build && cd dist && npm publish"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "react": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-dom": "^16.4.1",
    "quill": "^1.3.6",
    "react-ace": "^6.1.2",
    "react-datepicker": "^1.5.0",
    "react-draft-wysiwyg": "^1.12.13",
    "react-quill": "^1.3.1",
    "draft-js": "^0.10.5",
    "moment": "^2.22.2",
    "@tinymce/tinymce-react": "^2.2.5",
    "marked": "^0.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "classnames": "^2.2.6",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.4.2",
    "less": "^3.8.0",
    "postcss-modules": "^1.3.2",
    "prettier": "^1.13.6",
    "pretty-quick": "^1.6.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.5",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-copy-glob": "^0.2.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-postcss-modules": "^1.0.8",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-size-snapshot": "^0.6.1"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  }
