{
  "name": "@zesty-io/core",
  "description": "This is a collection of React core UI components for the Zesty.io platform.",
  "version": "1.2.2-alpha.0",
  "author": "Zesty.io <developers@zesty.io>",
  "license": "UNLICENSED",
  "main": "dist/",
  "browser": "dist/umd.bundle.js",
  "scripts": {
    "test": "npx jest ./src/**/*test.js --config config.jest.js",
    "build": "npm run build:es2015 && npm run build:bundle && npx gulp --gulpfile config.gulp.js && cp package.json dist/package.json",
    "build:es2015": "cross-env NODE_ENV=production npx babel ./src --out-dir ./dist --ignore *.test.js",
    "build:bundle": "cross-env NODE_ENV=production npx rollup -c config.rollup.js",
    "clean": "npx rimraf dist",
    "release": "npm run clean && npm run build && cd dist && npm publish",
    "release:alpha": "npm run clean && npm run build && cd dist && npm publish --tag alpha",
    "start": "npm i && npm run build && cd dist/ && npm link"
  },
  "dependencies": {
    "codemirror": "^5.54.0",
    "js-beautify": "^1.11.0",
    "tinymce": "^5.3.2"
  },
  "peerDependencies": {
    "@aeaton/react-prosemirror": "^0.21.1",
    "@aeaton/react-prosemirror-config-default": "^0.11.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@tinymce/tinymce-react": "^3.12.6",
    "classnames": "^2.3.1",
    "flatpickr": "^4.6.9",
    "lodash": "^4.17.20",
    "react": "^17.0.2",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-flatpickr": "^3.10.7",
    "react-router-dom": "^5.2.0",
    "showdown": "^1.9.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.1",
    "@babel/plugin-proposal-function-sent": "^7.10.1",
    "@babel/plugin-proposal-numeric-separator": "^7.10.1",
    "@babel/plugin-proposal-throw-expressions": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime": "^7.10.1",
    "babel-jest": "26.1.0",
    "cross-env": "7.0.2",
    "gulp": "4.0.2",
    "gulp-concat-css": "3.1.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.1.0",
    "less": "3.12.2",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "react-test-renderer": "16.10.2",
    "rollup": "2.22.1",
    "rollup-plugin-analyzer": "3.3.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy-glob": "0.3.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-postcss": "3.1.3",
    "rollup-plugin-postcss-modules": "2.0.1",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-size-snapshot": "0.12.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-visualizer": "^4.0.4"
  }
}
